include /mixins/forms.pug

doctype html
html(lang="en")
  head
    title= Title
    script(src='/assets/vendor.js')
    script(src='/assets/application.js')
  body
    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
      .navbar-header
        button.navbar-toggler.navbar-toggler-right(type="button" data-toggle="collapse"
        data-target="#" aria-expanded="false")
          span.navbar-toggler-icon
        a.navbar-brand(href="/") All-Tasks      
      .collapse.navbar-collapse(id="navbarSupportedContent")
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href=urlFor('users')) Users
        ul.navbar-nav.justify-content-end
          if isSignedIn()
            li.nav-item
              a.nav-link(href=urlFor('session') data-method='delete' rel='nofollow') ⇐ Sign Out
          else
            li.nav-item
              a.nav-link(href=urlFor('newSession')) ⇒ Sign In
            li.nav-item
              a.nav-link(href=urlFor('newUser')) ⇑ Sign Up &nbsp;
    .container
        - const msg = flash.get()
        if msg
          .alert.alert-info.m-3= msg
        block content
